extends layout/home

block style_content
    link(rel="stylesheet", href="/stylesheets/blog.css")

block blogs 
    for i in posts
        div(class="blog-posts")
            img(class="blog-img" src="/images/home.jpg", alt="blog image" width="600" height="400")
            h3(class="blog-title") #{i.blogtitle} 
            p #{i.blogdescription}
            form(action=`/delete/${i._id}` class="form-posts" method="post")
                button(type="submit" class="post-delete-btn") Delete 
            form(action=`/update/${i_id}` class="form-posts" method="post")
                button(class="post-update-btn" href="/blog/new") Update 
    