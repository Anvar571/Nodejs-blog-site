extends layout/home

block style_content
    link(rel="stylesheet", href="/stylesheets/login.css")

block login
    div(class="login-page")
        if error_message
            h2(class="error-message") #{error_message} 
        form(action="/users/login" method="POST") 
            div(class="")
                label(for="email") Email
                input(class="inputs" type="email" placeholder="Enter email" id="email" name="email")  
            div(class="")
                label(for="password") Password
                input(class="inputs" type="password" id="password" placeholder="Enter password" name="password") 
            button(class="submit-btn" type="submit") Login

block scripts
